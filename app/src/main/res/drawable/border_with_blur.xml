<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inner background shape -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Inner background color -->
            <corners android:radius="12dp" /> <!-- Corner radius matching the border -->
        </shape>
    </item>

    <!-- Outer border with blur effect -->
    <item>
        <shape>
            <gradient
                android:startColor="#80CCCCCC"
                android:endColor="#00CCCCCC"
                android:angle="0" />
            <corners android:radius="12dp" />
            <stroke
                android:width="2dp"
                android:color="#CCCCCC"/> <!-- Border color and width -->
        </shape>
    </item>

</layer-list>
